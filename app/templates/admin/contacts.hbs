<h2>Contacts</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>E-mail</th>
            <th>Message</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |contact|}}
        <tr>
            <td>{{contact.email}}</td>
            <td>{{contact.message}}</td>
            <th>
                <button class="btn btn-danger btn-xs" {{action 'deleteContact' contact}}>Delete</button>
            </th>
        </tr>
        {{/each}}
    </tbody>
</table>